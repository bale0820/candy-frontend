// app/sitemap.ts
export default function sitemap() {
  const baseUrl = "https://candy-frontend-taupe.vercel.app";

  return [
    { url: baseUrl, lastModified: new Date() },
    { url: `${baseUrl}/product`, lastModified: new Date() },
    { url: `${baseUrl}/recipe`, lastModified: new Date() },
  ];
}
